#!/usr/bin/env bash
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd)"
source ${DIR}/cfg

r=$(docker container ls -a -q | grep ${NAME})
if [ ! -z "${r}" ]; then
    echo "Removing container(s) ${r}"
    docker rm -f ${r}
fi

r=$(docker image ls -a -q  | grep ${NAME})
if [ ! -z "${r}" ]; then
    echo "Removing image(s) ${r}"
    docker rmi -f ${r}
fi